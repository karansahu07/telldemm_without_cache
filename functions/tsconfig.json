{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["../node_modules"]
}
